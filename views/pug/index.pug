html
  head
    title FCC Chat App
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap' rel='stylesheet')
    link(rel='stylesheet', href='/public/style.css')
  body
    .navbar
      .container
        h1 FCC Chat App
        if user
          a(href='/logout' style='color: white') Logout

    .container
      .card
        h2.center Welcome to Secure Chat
        p#pug-variable= message

        if showLogin
          h3.center Login to Continue
          form(action='/login' method='post')
            .form-group
              label(for='username') Username
              input#username.form-control(type='text' name='username' required)
            .form-group
              label(for='password') Password
              input#password.form-control(type='password' name='password' required)
            button.btn.btn-primary(type='submit') Log In

        if showRegistration
          hr
          h3.center Create Account
          form(action='/register' method='post')
            .form-group
              label(for='username') Username
              input#username.form-control(type='text' name='username' required)
            .form-group
              label(for='password') Password
              input#password.form-control(type='password' name='password' required)
            button.btn.btn-primary(type='submit') Register

        if showSocialAuth
          .social-login
            h3.center Or continue with
            a.btn.btn-ghost(href='/auth/github')
              img(src='/public/github-icon.svg' alt='GitHub' style='height: 20px;')
              | GitHub
